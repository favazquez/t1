<h1>Todas las noticias</h1>
<%= link_to 'New article', new_article_path %>

<table>
  <tr>
    <th>Titulo</th>
    <th>Bajada</th>
    <th>Cuerpo</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.subhead %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
    </tr>
  <% end %>
</table>
