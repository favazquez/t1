<h1>Administracion de noticias</h1>
<%= link_to 'Agregar noticia', new_article_path %>

<%= link_to 'Volver al inicio', 'articles/home' %>

<table>
  <tr>
    <th>Titulo</th>
    <th>Fecha Publicacion</th>
  </tr>

  <% @articles.order(:created_at).reverse.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.created_at %></td>
      <td><%= link_to 'Ver', article_path(article) %></td>
      <td><%= link_to 'Editar', edit_article_path(article) %></td>
      <td><%= link_to 'Eliminar', article_path(article),
              method: :delete,
              data: { confirm: '¿Estás seguro de que quieres borrar la noticia?' } %></td>
    </tr>
  <% end %>
</table>
